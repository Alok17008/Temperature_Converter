<!-- res/drawable/spinner_bg.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape
            android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#FFFFFF" />
            <!-- Border color and width -->
            <stroke
                android:color="#CCCCCC"
                android:width="1dp" />
            <!-- Rounded corners -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Spinner arrow -->
    <item android:right="8dp" android:top="8dp" android:bottom="8dp">
        <layer-list>
            <item>
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45"
                    android:pivotX="10%"
                    android:pivotY="10%">
                    <shape
                        android:shape="rectangle">
                        <solid android:color="#CCCCCC" />
                        <stroke
                            android:color="#CCCCCC"
                            android:width="1dp" />
                    </shape>
                </rotate>
            </item>
            <item android:right="4dp" android:top="4dp" android:bottom="4dp">
                <shape
                    android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
